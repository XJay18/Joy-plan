<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bottom Navigation text style -->
    <style name="bottom_text">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Time picker style -->
    <style name="time_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>

    <!-- Fqz Activity Common text -->
    <style name="fqz_ctext">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- The text style for function bars -->
    <style name="function_bar_text">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- The style for the left icon of function bars-->
    <style name="function_bar_lefticon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Font Library -->
    <style name="font_yy">
        <item name="android:fontFamily">@font/youyuan</item>
    </style>
</resources>
