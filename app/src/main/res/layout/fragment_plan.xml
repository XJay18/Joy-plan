<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/fragment_plan_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/date_picker_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="学术生活"
                    android:textColor="@color/fragment_plan_colorPrimary"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="0dp"
                    app:srcCompat="@drawable/ic_study" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/date_picker_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="体育锻炼"
                    android:textColor="@color/fragment_plan_colorPrimary"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="0dp"
                    app:srcCompat="@drawable/ic_sports" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/date_picker_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="休闲娱乐"
                    android:textColor="@color/fragment_plan_colorPrimary"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="0dp"
                    app:srcCompat="@drawable/ic_amusement" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/date_picker_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="XXXXX"
                    android:textColor="@color/fragment_plan_colorPrimary"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="0dp"
                    app:srcCompat="@drawable/ic_study" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/date_picker_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="XXXXX"
                    android:textColor="@color/fragment_plan_colorPrimary"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="0dp"
                    app:srcCompat="@drawable/ic_study" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>