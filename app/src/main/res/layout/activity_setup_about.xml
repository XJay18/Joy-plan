<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <!--头部-->
    <RelativeLayout
        style="@style/top_toor_bar"
        android:background="@drawable/toolbar_blue">

        <Button
            android:id="@+id/bt_setup_about_back"
            style="@style/top_tb_btnSize"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_left_white"/>

        <TextView
            style="@style/top_tb_text_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_setup_about_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"/>



        <LinearLayout
            android:id="@+id/ll_setup_about_version"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/iv_setup_about_logo"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="@drawable/bg_setup_button">

            <TextView
                android:id="@+id/tv_setup_about_version"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="版本号："
                style="@style/function_bar_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="v1.0.0"
                style="@style/function_bar_text"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_setup_about_other"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_setup_button"
            android:layout_below="@id/ll_setup_about_version"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                style="@style/function_bar_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="其他" />

            <ImageView
                style="@style/function_bar_righticon"
                android:layout_marginEnd="25dp"
                android:layout_weight="0"
                android:background="@drawable/ic_right" />
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>