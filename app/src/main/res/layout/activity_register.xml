<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20sp"
                android:text="用户名："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/regi_username"
                android:layout_width="200sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/username"/>
            <TextView
                android:id="@+id/useraccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="63dp"
                android:text="账号："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/userpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="122dp"
                android:text="密码："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/userpassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="178dp"
                android:text="重复密码："
                android:textSize="20sp" />


            <EditText
                android:id="@+id/regi_account"
                android:layout_alignLeft="@+id/regi_username"
                android:layout_width="200sp"
                android:layout_height="30sp"
                android:layout_marginTop="59dp"
                android:layout_toRightOf="@+id/useraccount"/>

            <EditText
                android:id="@+id/regi_password"
                android:layout_alignLeft="@+id/regi_username"
                android:layout_width="200sp"
                android:layout_height="30sp"
                android:layout_marginTop="118dp"
                android:layout_toRightOf="@+id/userpassword"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/regi_password2"
                android:layout_alignLeft="@+id/regi_username"
                android:layout_width="200sp"
                android:layout_height="30sp"
                android:layout_marginTop="175dp"
                android:layout_toRightOf="@+id/userpassword"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:text="确定"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>