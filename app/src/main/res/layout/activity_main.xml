<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="346.5dp"
        android:background="@drawable/bg_main_below">
        <Button
            android:id="@+id/main_return"
            android:layout_width="10.5dp"
            android:layout_height="16.5dp"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/btn_return"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="381dp"
            android:layout_height="306dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/bg_main_login"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginBottom="240dp"
                android:text="帐号："
                android:textSize="15sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="223.5dp"
                android:layout_height="26.6dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58.5dp"
                android:layout_marginBottom="208.5dp"
                android:background="@drawable/et_login"
                android:hint="请输入您的手机号码" />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginBottom="169.5dp"
                android:text="密码："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="223.5dp"
                android:layout_height="26.6dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58.5dp"
                android:layout_marginBottom="139.5dp"
                android:background="@drawable/et_login"
                android:hint="请输入您的密码"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/remenber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="83dp"
                android:text="记住密码"
                android:textSize="9.3sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_alignBottom="@+id/login"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19.5dp"
            android:layout_marginBottom="258dp"
            android:background="@drawable/bg_main_ball" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="261dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="261dp"
            android:background="@drawable/bg_btn_blue"
            android:text="登录"
            android:textSize="14.6sp" />
    </RelativeLayout>
</android.widget.RelativeLayout>