<?xml version="1.0" encoding="utf-8"?>
<com.android.xjay.joyplan.CustomExpanding.CustomItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    app:indicator_margin_left="5dp"
    app:indicator_margin_right="5dp"

    app:animation_duration="250"

    app:indicator_height="0dp"
    app:indicator_width="420dp"

    app:item_layout="@layout/custom_item"
    app:separator_layout="@layout/separator_layout"

    app:show_animation="true"
    app:show_indicator="false"
    app:start_collapsed="true"

    app:sub_item_layout="@layout/custom_sub_item"/>